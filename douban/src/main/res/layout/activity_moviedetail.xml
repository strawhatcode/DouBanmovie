<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffff"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background">
        <ImageView
            android:id="@+id/am_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back"
            android:padding="15dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="电影"
            android:textSize="15dp"
            android:textColor="#000000"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="#dd242323">
        <ImageView
            android:id="@+id/movie_img"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:layout_gravity="center"/>
    </FrameLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@drawable/bottom_side">
        <TextView
            android:id="@+id/movie_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/movie_inf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="#aaa9a9"
            android:layout_below="@+id/movie_name"
            android:textSize="10dp"
            android:layout_marginTop="5dp"/>
        <TextView
            android:id="@+id/movie_dir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="#aaa9a9"
            android:layout_below="@+id/movie_inf"
            android:textSize="10dp"
            android:layout_marginTop="7dp"/>
        <LinearLayout
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:orientation="vertical"
            android:background="@drawable/relative_side"
            android:padding="5dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="豆瓣评分"
                android:textSize="10dp"
                android:textColor="#aaa9a9"
                android:gravity="center"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/movie_rat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="#000000"
                android:layout_weight="2"
                android:gravity="center"/>
            <TextView
                android:id="@+id/movie_ratnum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="10dp"
                android:textColor="#aaa9a9"
                android:layout_weight="1"
                android:gravity="center"/>
        </LinearLayout>
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="剧情简介"
        android:textColor="#aaa9a9"
        android:layout_marginLeft="10dp"/>
    <TextView
        android:id="@+id/movie_summary"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_margin="10dp"
        android:textSize="15dp"
        android:textColor="#000000"
        android:ellipsize="end"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="演员"
        android:textColor="#aaa9a9"
        android:layout_marginLeft="10dp"/>
    <com.example.douban.OverrideView.HorizontalListView
        android:id="@+id/castimg"
        android:layout_width="match_parent"
        android:layout_height="150dp">

    </com.example.douban.OverrideView.HorizontalListView>

</LinearLayout>